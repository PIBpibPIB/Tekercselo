unit PWM;

//   !!!!  E.2  !!!!

procedure PWM_Init;
procedure PWM_Set(val : byte);
function  PWM_Get : byte;

implementation
var
  pwm : byte;
//------------------------------------------------------------------------------
procedure PWM_Init;
begin
  PWM5_Init(10000);
  PWM5_Start;
end;
//------------------------------------------------------------------------------
procedure PWM_Set(val : byte);
begin
  pwm := val;
  PWM5_Set_Duty(val);
end;
//------------------------------------------------------------------------------
function  PWM_Get : byte;
begin
  result := pwm;
end;
//------------------------------------------------------------------------------
end.

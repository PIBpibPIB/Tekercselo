unit PWM;
uses
  TImer,
  Declarations;

procedure PWM_Init;
procedure PWM_Set(val : byte);
function  PWM_Get : byte;
procedure PWM_Mainloop;

implementation
var
  pwm : byte;
  dwnextpwmtime : dword;
//------------------------------------------------------------------------------
procedure PWM_Init;
begin
  dwnextpwmtime :=0;
  
  Unlock_IOLOCK;
  PPS_Mapping_NoLock(3, _OUTPUT, _CCP1_P1A);
  Lock_IOLOCK;
  
  PWM1_Init(10000);
  PWM1_Start;
  PWM1_Set_Duty(0);
  PWM_Set(0);
end;
//------------------------------------------------------------------------------
procedure PWM_Set(val : byte);
begin
  pwm := val;
  PWM1_Set_Duty(val);
end;
//------------------------------------------------------------------------------
function  PWM_Get : byte;
begin
  result := pwm;
end;
//------------------------------------------------------------------------------
procedure PWM_Mainloop;
var
  adval : word;
  bi    : byte;
begin
  if dwticks > dwnextpwmtime then
  begin
    dwnextpwmtime := dwticks + (TICKSperSEC / 100);

    INTCON.GIE := 0;
    
    adval := ADC_Read(5);
    adval := ADC_Read(5);
    adval := ADC_Read(5);
    adval := ADC_Read(5);
    adval := ADC_Read(5);
    adval := ADC_Read(5);
    adval := ADC_Read(5);

    adval :=0 ;
    for bi := 0 to 15 do
      adval := adval + ADC_Read(5);

    INTCON.GIE := 1;

    adval := adval shr 8;
    PWM_Set(Lo(adval));
  end;
end;
//------------------------------------------------------------------------------
end.
